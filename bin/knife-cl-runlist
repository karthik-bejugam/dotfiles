#!/usr/bin/env bash

# mj-cl-sed clyde run_list run_away /etc/chef/client-config.json `cat /tmp/mj-flip/clyde-hosts.log `

slug=$1 ; shift
n=$1    ; shift
verb=$1 ; shift
recipe_or_role=$1 ; shift

#
# race through a list of cluster nodes doing something to their 
#
for (( i=0 ; i <= ${n} ; i++ )) ; do
  echo ${slug}-$i ;
  knife node run_list $verb ${slug}-$i $recipe_or_role &
done 
