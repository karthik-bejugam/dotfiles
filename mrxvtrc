# ---------------------------- KEYBOARD SHORTCUTS ---------------------------- #
#

# ---------------------------------------------------------------------------- #
#					
#			       Scrolling
Mrxvt.macro.Prior:			Scroll -1p
Mrxvt.macro.Next:			Scroll +1p
Mrxvt.macro.Alt+Up:			Scroll -1000000
Mrxvt.macro.Alt+Down:			Scroll +1000000
Mrxvt.macro.Shift+Home:			Scroll -1000000
Mrxvt.macro.Shift+End:			Scroll +1000000

# ---------------------------------------------------------------------------- #
#
#				   Tabs
#
# Mrxvt.macro.Alt+t:			NewTab
Mrxvt.macro.Ctrl+Shift+t:		NewTab
Mrxvt.macro.Ctrl+Shift+w:		Close 0
Mrxvt.macro.Ctrl+Tab:			GotoTab 0	# Previous active tab
Mrxvt.macro.Ctrl+Shift+Tab:             GotoTab 0
Mrxvt.macro.Ctrl+Prior:			GotoTab -1
Mrxvt.macro.Ctrl+Next:			GotoTab +1
Mrxvt.macro.Shift+Left: 		MoveTab -1
Mrxvt.macro.Shift+Right:		MoveTab +1
Mrxvt.macro.Ctrl+Shift+Left:		GotoTab -1
Mrxvt.macro.Ctrl+Shift+Right:		GotoTab +1
Mrxvt.macro.Ctrl+Shift+less:		MoveTab	-1
Mrxvt.macro.Ctrl+Shift+greater:		MoveTab +1

# ---------------------------------------------------------------------------- #
#
#				   Fonts
#
Mrxvt.macro.Shift+KP_Add:		ResizeFont +1
Mrxvt.macro.Shift+KP_Subtract:		ResizeFont -1
Mrxvt.macro.Ctrl+equal:			ResizeFont +1
Mrxvt.macro.Ctrl+minus:			ResizeFont -1
